<% if params[:type] == "Have" %>
  $(".have-<%= @item.id %>").replaceWith("<%= escape_javascript(render('items/have' , item: @item)) %>");
<% else %>
  $(".want-<%= @item.id %>").replaceWith("<%= escape_javascript(render('items/want' , item: @item)) %>");
<% end %>

$('.btn-have,.btn-want').removeAttr('disabled');

<%# 追加 %>
<% if current_user %>
  var have_count = $("#have_count");
  if (have_count) {
    have_count.html('<%= current_user.haves.count %>')
  }
  var want_count = $("#want_count");
  if (want_count) {
    want_count.html('<%= current_user.wants.count %>')
  }
<% end %>
